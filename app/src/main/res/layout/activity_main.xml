<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    tools:context="com.algonquincollege.ari.playtimearidaydemo.MainActivity"
    android:background="@color/white"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_page_container"
        android:layout_marginTop="55dp">

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav_bar_container"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/nav_bar_panel_placeholder"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            >

            </LinearLayout>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_layout">

        <include
                android:id="@+id/app_bar"
                layout="@layout/app_bar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/main_username_text_view"
            android:layout_toRightOf="@+id/petey_image_view"
            android:layout_alignBottom="@+id/app_bar"
            android:layout_alignTop="@+id/app_bar"
            android:gravity="left|center"
            android:paddingLeft="16dp"
            android:textSize="24dp"
            android:textColor="@color/content_red" />

        <ImageView
                android:id="@+id/petey_image_view"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:src="@drawable/theme_peteycircle" />
    </RelativeLayout>

</RelativeLayout>
